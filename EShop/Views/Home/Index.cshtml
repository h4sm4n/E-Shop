
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EShop.SeoUrl
@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entity.Product>
<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <div class="col-sm-6">
                                <h1><span>Serttaş</span>Kuruyemiş</h1> 
                                <h2>Aydın'ın En İyi Kuruyemiş Tedarikçisi</h2>
                                <p>2014'den beri en iyi kalite ürünlerimiz ve üstün hizmet vizyonumuzla hizmetinizdeyiz. Her zaman bekleriz.</p>
                                <button type="button" class="btn btn-default get">Hemen alışverişe başlayın.</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/Image/333.png" class="girl img-responsive" alt="" />
                            </div>
                        </div>
                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>Serttaş</span>Kuruyemiş</h1>
                                <h2>Aydın'ın En İyi Kuruyemiş Tedarikçisi</h2>
                                <p>2014'den beri en iyi kalite ürünlerimiz ve üstün hizmet vizyonumuzla hizmetinizdeyiz. Her zaman bekleriz.</p>
                                <button type="button" class="btn btn-default get">Hemen alışverişe başlayın.</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/Image/111.png"class="girl img-responsive" alt="" />
                            </div>
                        </div>

                        <div class="item">
                            <div class="col-sm-6">
                                <h1><span>Serttaş</span>Kuruyemiş</h1>
                                <h2>Aydın'ın En İyi Kuruyemiş Tedarikçisi</h2>
                                <p>2014'den beri en iyi kalite ürünlerimiz ve üstün hizmet vizyonumuzla hizmetinizdeyiz. Her zaman bekleriz.</p>
                                <button type="button" class="btn btn-default get">Hemen alışverişe başlayın.</button>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Content/Image/222.png" class="girl img-responsive" alt="" />
                            </div>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            @Html.Action("CategoryList", "Category")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.AdresDuzenle(item.Name))"><img src="~/Content/Image/@item.Image" width="65" height="110" alt="" /></a>
                                        <h2>@item.Price</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/ProductDetails/@item.Id/@(Seo.AdresDuzenle(item.Name))" class="btn btn-default add-to-cart">Ürün Detay</a>
                                    </div>

                                </div>

                            </div>
                        </div>
                    }

                    @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)



                </div><!--features_items-->

                @Html.Action("PopularProduct", "Product")

            </div>
        </div>
    </div>
</section>

 