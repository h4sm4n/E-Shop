@using DataAccessLayer.Context
@model EntityLayer.Entity.Product
@{
    ViewBag.Title = "Update";
}

<form method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{
        List<SelectListItem> CatIDlistItems = new List<SelectListItem>();
        DataContext db = new DataContext();
        foreach (var item in db.Categories)
        {
            CatIDlistItems.Add(new SelectListItem
            {
                Text = @item.Name,
                Value = @item.Id.ToString()
            });
        }

    }
    <div class="container">
        <div class="row">
            <div class="col-md-6">

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Ürün Bilgisi</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" />
                    @Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" class="form-control" name="Price" value="@Model.Price" />
                    @Html.ValidationMessageFor(x => x.Price, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Marka</label>
                    <input type="text" class="form-control" name="Brand" value="@Model.Brand" />
                    @Html.ValidationMessageFor(x => x.Brand, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Son Kullanma Tarihi</label>
                    <input type="text" class="form-control" name="ExpireDate" value="@Model.ExpireDate" />
                    @Html.ValidationMessageFor(x => x.ExpireDate, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" class="form-control" name="Stock" value="@Model.Stock" />
                    @Html.ValidationMessageFor(x => x.Stock, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryId, CatIDlistItems, "--Seçiniz--", new { @class = "form-control" })
                    @*@Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ktgr2, new { @class = "form-control" })*@
                    @Html.ValidationMessageFor(x => x.CategoryId, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Miktar</label>
                    <input type="text" class="form-control" name="Quantity" value="@Model.Quantity" />
                    @Html.ValidationMessageFor(x => x.Quantity, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/Content/Image/@Model.Image" width="50" height="50" />
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Image, "Resim", htmlAttributes: new { @class = "control-label col-md-2" })
                    <input type="file" class="form-control" name="File" />
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.IsActive, "Aktif", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(x => x.IsActive)
                    @Html.ValidationMessageFor(x => x.IsActive, "", new { @style = "color:red" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.IsPopular, "Popüler", htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(x => x.IsPopular)
                    @Html.ValidationMessageFor(x => x.IsPopular, "", new { @style = "color:red" })
                </div>



                <button class="btn btn-primary" type="submit">Güncelle</button>

                <a href="/AdminProduct/Index/" class="btn btn-success" style="margin-left:12px;">Ürün Listesi</a>

            </div>
        </div>
    </div>
</form>

