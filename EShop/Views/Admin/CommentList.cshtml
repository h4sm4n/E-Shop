@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entity.Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>İçerik</th>
        <th>Ürün Bilgisi</th>
        <th>Kullanıcı</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Icerik</th>
            <th>@item.Product.Name</th>
            <th>@item.User.Name @item.User.Surname</th>
            <th>@item.Date</th>
            <th>@Html.ActionLink("Sil", "Delete", new {item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</th>
        </tr>
    }
</table>
