@model List<EntityLayer.Entity.User>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Sil</th>
        
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name @item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Username</td>
                <td>@item.Password</td>
                <td>@Html.ActionLink("Sil", "UserDelete", new {item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
            </tr>
        }

    </tbody>
</table>

